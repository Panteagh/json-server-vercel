{
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "includeFiles": "db.json",
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "api/server.js"
    }
  ],
  "routes": [
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/Avatars/(.*)",
      "dest": "/public/Avatars/$1"
    },
    {
      "src": "/marketPlaceNFTs/(.*)",
      "dest": "/public/marketPlaceNFTs/$1"
    }
  ]

}
